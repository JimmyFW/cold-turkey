{
  "manifest_version": 2,
  "name": "ColdTurkey",
  "description": "Curb your uncontrollable YouTube addiction",
  "version": "1.0",
  "browser_action": {
    "default_icon": "turkey.png",
    "default_title": "Cold Turkey",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "http://www.youtube.com/*"
      ],
      "js": [
        "app.js"
      ]
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "storage",
    "identity"
  ]
}